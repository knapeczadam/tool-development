        mc:Ignorable="d"
        Title="DemoWindow02" Height="100" Width="200">
    <Window.Resources>

        <!-- Local Defined Button Base Style (or define Global) -->
        <!-- ... -->
        <Style TargetType="Button"
               x:Key="MyButtonBaseStyle" 
            >
               <Setter Property="Background"
                       Value="Pink"/>
               <Setter Property="Padding"
                       Value="8"/>
               <Setter Property="Margin"
                       Value="4"/>
               <Setter Property="FontWeight"
                       Value="Bold"/>
        </Style>
        
        <!-- Specialization (inherit Base Style) -->
        <!-- ... -->
        <Style TargetType="Button"
               BasedOn="{StaticResource MyButtonBaseStyle}">
            <Setter Property="Background" Value="Black"></Setter>
        </Style>

    </Window.Resources>
    
