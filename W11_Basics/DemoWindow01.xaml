<Window x:Class="W11_Basics.DemoWindow01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W11_Basics"
        mc:Ignorable="d"
        Title="DemoWindow01" Height="100" Width="200">
    <Window.Resources>
        
        <!-- Explicit Style -->
        <Style x:Key="MyButtonStyle"
               TargetType="Button"
               >
               <Setter Property="Background"
                       Value="LightBlue"
                       />
               <Setter Property="Padding"
                       Value="5"/>
               <Setter Property="Margin"
                       Value="5"/>
               <Setter Property="FontWeight"
                       Value="Bold"/>
        </Style>
        
        <!-- Implicit Style -->
        <!-- does not have a name -->
        <Style 
               TargetType="Button"
               >
               <Setter Property="Background"
                       Value="Orange"
                       />
               <Setter Property="Padding"
                       Value="5"/>
               <Setter Property="Margin"
                       Value="5"/>
               <Setter Property="FontWeight"
                       Value="Bold"/>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- NO STYLE -->
        <!-- <StackPanel> -->
        <!--     <Button Background="LightBlue" -->
        <!--     Padding="8" -->
        <!--     Margin="4" -->
        <!--     FontWeight="Bold" -->
        <!--     Content="Save" /> -->
        <!--     <Button Background="LightBlue" -->
        <!--     Padding="8" -->
        <!--     Margin="4" -->
        <!--     FontWeight="Bold" -->
        <!--     Content="Cancel" /> -->
        <!-- </StackPanel> -->

        <!-- WITH STYLE (Explicit) -->
        <!-- ... -->
        <StackPanel>
            <Button 
            Style="{StaticResource MyButtonStyle}"
            Content="Save" />
            <Button 
            Content="Cancel" />
        </StackPanel>
        
        <!-- WITH STYLE (Implicit) -->
        <!-- ... -->
        
    </Grid>
</Window>
