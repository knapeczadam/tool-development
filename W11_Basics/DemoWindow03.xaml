<Window x:Class="W11_Basics.DemoWindow03"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W11_Basics"
        mc:Ignorable="d"
        Title="DemoWindow03" Height="150" Width="200">
    <Window.Resources>

        <!-- CheckBox Style with Triggers -->
        <!-- ... -->
        <Style TargetType="CheckBox">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="Green"/>
                    <Setter Property="Content" Value="OK"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="Content" Value="NOK"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style with Triggers -->
        <!-- ... -->
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="Black"></Setter>
                    <Setter Property="Foreground" Value="Green"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <CheckBox Grid.Row="0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  IsChecked="False"/>
        
        <TextBox Grid.Row="1" 
                 Margin="10"
                 Text="Hello World!"/>
    </Grid>
</Window>
