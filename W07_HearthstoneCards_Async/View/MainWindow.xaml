<Window x:Class="W07_HearthstoneCards_Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W07_HearthstoneCards_Async"
        xmlns:viewModel="clr-namespace:W07_HearthstoneCards_Async.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel_Threading />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Load all cards button -->
        <Button Grid.Row="0"  Content="LOAD ALL CARDS" Padding="4" Margin=" 4" 
                Command="{Binding LoadAllCardsCommand}" />
       
        <!-- horizontal layout for search -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label>Card Type(s) (Comma separated)</Label>
            <!-- Search Input-->
            <TextBox Grid.Column="1" x:Name="txtSearch" Margin="8" />
            <!-- passes text of txtsearch as search string -->
            <Button Grid.Column="2" Content="SEARCH CARDS" Padding="4" Margin=" 4"
                    Command="{Binding LoadFilteredCardsCommand}" 
                    CommandParameter="{Binding ElementName=txtSearch, Path=Text}" />
        </Grid>


        <ListBox ItemsSource="{ Binding CardsList}" Grid.Row="2" Margin="8,0" />
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2"
                   Text="{Binding LoadingText}" Padding="4" FontWeight="Bold"/>
    </Grid>
</Window>
