<UserControl x:Class="W10_ApexIcons.Views.IconEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W10_ApexIcons.Views"
             xmlns:viewModels="clr-namespace:W10_ApexIcons.ViewModels"
             xmlns:dataprovider="clr-namespace:W10_ApexIcons.DataProviders"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:UserControl.DataContext>
        <viewModels:IconEditorViewModel/>
    </d:UserControl.DataContext>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" BorderThickness="2" BorderBrush="Black" Width="300" Height="300" >
            <local:IconView IconSource="{Binding IconData, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
        </Border>
        <!-- Swatch Name -->
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10,2" Text="Name:"/>
        <TextBox Grid.Row="0" Grid.Column="2" Margin="10,2" Text="{Binding Name}"/>

        <!-- Skill (defines the icon)-->
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="10,2" Text="Skill:"/>
        <ComboBox Grid.Row="1" Grid.Column="2" Margin="10,2" ItemsSource="{x:Static dataprovider:SkillTypeData.AllSkillTypes}" SelectedValue="{Binding SkillType}"/>

        <!-- Red slider-->
        <TextBlock  Grid.Row="2" Grid.Column="1" Margin="10,2" Text="Red:" />
        <Slider     Grid.Row="2" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Red}"/>
        <TextBox    Grid.Row="2" Grid.Column="3" Margin="10,2" Text="{Binding Red}"/>

        <!-- Green slider-->
        <TextBlock  Grid.Row="3" Grid.Column="1" Margin="10,2" Text="Green:"/>
        <Slider     Grid.Row="3" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Green}" />
        <TextBox    Grid.Row="3" Grid.Column="3" Margin="10,2" Text="{Binding Green}" />

        <!-- Blue slider-->
        <TextBlock  Grid.Row="4" Grid.Column="1" Margin="10,2" Text="Blue:" />
        <Slider     Grid.Row="4" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Blue}" />
        <TextBox    Grid.Row="4" Grid.Column="3" Margin="10,2" Text="{Binding Blue}" />

        <!-- Alpha slider-->
        <TextBlock  Grid.Row="5" Grid.Column="1" Margin="10,2" Text="Alpha:" />
        <Slider     Grid.Row="5" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Alpha}" />
        <TextBox    Grid.Row="5" Grid.Column="3" Margin="10,2" Text="{Binding Alpha}" />
    </Grid>
</UserControl>
