<Window x:Class="W10_ApexIcons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W10_ApexIcons"
        xmlns:viewModels="clr-namespace:W10_ApexIcons.ViewModels"
        xmlns:views="clr-namespace:W10_ApexIcons.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"/>
                <MenuItem Header="_Redo"/>
            </MenuItem>
        </Menu>
        <Grid>
            <!-- Main layout-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Add / Remove buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding AddIconCommand}">+</Button>
                <Button Grid.Column="1" Command="{Binding DeleteIconCommand}" CommandParameter="{Binding SelectedIcon}">-</Button>
            </Grid>

            <!-- Swatches List -->
            <ListView Grid.Row="1" Grid.Column="0" 
                  ItemsSource="{Binding Icons}" 
                  SelectedItem="{Binding SelectedIcon}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <views:IconView IconSource="{Binding IconData}" Width="50" Height="50"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Swatch Control-->
            <views:IconEditorControl Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" DataContext="{Binding SelectedIcon}"/>
        </Grid>
    </DockPanel>
</Window>
