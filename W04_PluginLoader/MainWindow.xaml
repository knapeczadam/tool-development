<Window x:Class="W04_PluginLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W04_PluginLoader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="657*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Height="424" Margin="395,0,0,0" VerticalAlignment="Top" Width="2"/>
        <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,267,10" SelectionChanged="ListBox_SelectionChanged"/>
        <Grid Margin="402,10,10,10" Grid.ColumnSpan="2">
            <Grid x:Name="gridDetails" Margin="10,0,-10,95">
                <Label Content="Author" HorizontalAlignment="Left" Margin="32,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.553,-0.153" Width="94"/>
                <Label Content="Name" HorizontalAlignment="Left" Margin="32,27,0,0" VerticalAlignment="Top" Width="94"/>
                <Label Content="Description" HorizontalAlignment="Left" Margin="32,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.527,0.194" Width="85"/>
                <TextBlock x:Name="txtName" HorizontalAlignment="Left" Margin="245,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="133"/>
                <TextBlock x:Name="txtAuthor" HorizontalAlignment="Left" Margin="245,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="106"/>
                <TextBlock x:Name="txtDescription" HorizontalAlignment="Left" Margin="245,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="119"/>
                <Button x:Name="btnExecute" Content="Execute" HorizontalAlignment="Left" Margin="109,211,0,0" VerticalAlignment="Top" Width="189" Click="BtnExecute_Click"/>
            </Grid>
            <Grid Margin="0,319,0,0">
                <Button x:Name="btnScan" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Height="75" Click="BtnScan_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
