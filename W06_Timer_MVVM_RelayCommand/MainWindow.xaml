<Window x:Class="W06_Timer_MVVM_RelayCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W06_Timer_MVVM_RelayCommand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Label x:Name="lblCounter" Content="{Binding Counter}" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Height="236" Width="360" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="72" ContentStringFormat="N1"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="29,281,0,0" VerticalAlignment="Top" Height="131" Width="144" Background="#FF4F802C" FontWeight="Bold" FontSize="20" Command="{Binding StartCommand, Mode=OneWay}"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="602,281,0,0" VerticalAlignment="Top" Height="131" Width="166" Background="#FF811B1B" FontWeight="Bold" FontSize="20" Command="{Binding StopCommand, Mode=OneWay}"/>

    </Grid>
</Window>
