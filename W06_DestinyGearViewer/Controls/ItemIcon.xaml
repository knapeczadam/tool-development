<UserControl x:Class="W06_DestinyGearViewer.Controls.ItemIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W06_DestinyGearViewer.Controls"
             xmlns:dataProviders="clr-namespace:W06_DestinyGearViewer.DataProviders"
             mc:Ignorable="d" 
             x:Name="Root"
             d:DesignHeight="100"
             d:DesignWidth="100">
    <Grid DataContext="{Binding ElementName=Root, Path=ItemSource}"
          d:DataContext="{Binding Source={x:Static dataProviders:DesignTimeData.MockItem}}">
        <Border BorderThickness="3"
                BorderBrush="{Binding IsGridComplete, Converter={StaticResource convIconBorderColor}}">
            <Image Source="{Binding IconPath, Converter={StaticResource convPathToImage}}"
                   MouseLeftButtonDown="Image_MouseLeftButtonDown" />
        </Border>
    </Grid>
</UserControl>
