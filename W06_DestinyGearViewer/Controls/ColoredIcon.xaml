<UserControl x:Class="W06_DestinyGearViewer.Controls.ColoredIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W06_DestinyGearViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" x:Name="root">
    <Grid>
        <Rectangle Fill="{Binding ElementName=root,Path=Foreground}">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="{Binding ElementName=root,Path=IconSource}" />
            </Rectangle.OpacityMask>
        </Rectangle> 
    </Grid>
</UserControl>
