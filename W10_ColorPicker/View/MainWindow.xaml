<Window x:Class="W10_ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W10_ColorPicker"
        xmlns:viewModel="clr-namespace:W10_ColorPicker.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Command="{Binding UndoCommand}" Key="Z" Modifiers="Ctrl" />
        <KeyBinding Command="{Binding RedoCommand}" Key="Y" Modifiers="Ctrl" />
    </Window.InputBindings>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"  Command="{Binding UndoCommand}"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}"/>
            </MenuItem>
        </Menu>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" BorderThickness="2" BorderBrush="Black" Width="300" Height="300" >
                <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Fill="{Binding Color, Converter={StaticResource ColorToBrush}}"/>
            </Border>
            <!-- Red slider-->
            <TextBlock  Grid.Row="0" Grid.Column="1" Margin="10,2" Text="Red:" />
            <Slider     Grid.Row="0" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Red}"/>
            <TextBox    Grid.Row="0" Grid.Column="3" Margin="10,2" Text="{Binding Red, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Green slider-->
            <TextBlock  Grid.Row="1" Grid.Column="1" Margin="10,2" Text="Green:"/>
            <Slider     Grid.Row="1" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Green}" />
            <TextBox    Grid.Row="1" Grid.Column="3" Margin="10,2" Text="{Binding Green, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Blue slider-->
            <TextBlock  Grid.Row="2" Grid.Column="1" Margin="10,2" Text="Blue:" />
            <Slider     Grid.Row="2" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Blue}" />
            <TextBox    Grid.Row="2" Grid.Column="3" Margin="10,2" Text="{Binding Blue, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Alpha slider-->
            <TextBlock  Grid.Row="3" Grid.Column="1" Margin="10,2" Text="Alpha:" />
            <Slider     Grid.Row="3" Grid.Column="2" Margin="2" Minimum="0" Maximum="255" Value="{Binding Alpha}" />
            <TextBox    Grid.Row="3" Grid.Column="3" Margin="10,2" Text="{Binding Alpha, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </DockPanel>
</Window>
