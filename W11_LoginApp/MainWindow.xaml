<Window x:Class="W11_LoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W11_LoginApp"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackground}"
        Title="Login" Height="180" Width="355">
    <Window.Resources>
        <Storyboard x:Key="ShowLoader">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="LoaderGrid">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HideLoader">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="LoaderGrid">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard x:Name="HideLoader_BeginStoryboard" Storyboard="{StaticResource HideLoader}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="CredentialGrid" Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="72*"/>
                <ColumnDefinition Width="206*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="43*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Label Content="Username:" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25.96" Width="65.897"/>
            <Label Content="Password:" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Bottom" Height="25.96" Width="62.557"/>
            <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Height="22.654" Grid.Row="2" VerticalAlignment="Bottom" Width="89.245" Grid.Column="1" Grid.ColumnSpan="2" Click="btnLogin_Click"/>
            <TextBox x:Name="txtUser" Grid.Column="2" Margin="0,0,10,0" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="23"/>
            <PasswordBox x:Name="txtPass" Grid.Column="2" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Bottom" Height="23"/>
            <ComboBox HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Bottom" Width="64" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="2" Margin="0,0,10,0">
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Orange"/>
            </ComboBox>
        </Grid>
        <Grid x:Name="LoaderGrid" Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="106*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <local:LoaderControl x:Name="loaderControl" Height="Auto" Width="Auto" Grid.Row="1" Margin="10,0,0,0" Foreground="Black"/>
        </Grid>
    </Grid>
</Window>
