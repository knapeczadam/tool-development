<UserControl x:Class="W11_LoginApp.LoaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W11_LoginApp"
             mc:Ignorable="d" 
             x:Name="Loader"
             Foreground="Red"
             d:DesignHeight="360" d:DesignWidth="360">
    <UserControl.Resources>
        <Storyboard x:Key="LoadAnim" RepeatBehavior="Forever"/>
    </UserControl.Resources>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LoadAnim}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid x:Name="LayoutRoot">
        <Viewbox>
            <Grid Height="360" Width="360">
                <Label Content="TEMP" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="96" Background="Red" Foreground="#FFF3FF00"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
