<UserControl x:Class="W05_DataBinding.ManualBinding.Example2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.ManualBinding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Input" Margin="10,30,10,225">
            <Grid>
                <Label x:Name="label" Content="First Name:" HorizontalAlignment="Left" Margin="42,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.965,-0.116" Width="217"/>
                <Label x:Name="label1" Content="Last Name:" HorizontalAlignment="Left" Margin="42,91,0,0" VerticalAlignment="Top" Width="217"/>
                <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Margin="469,27,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="198" Height="31" TextChanged="TxtFirstName_TextChanged"/>
                <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Margin="469,86,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="198" Height="31" TextChanged="TxtLastName_TextChanged"/>
                <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="33,122,0,0" VerticalAlignment="Top" Width="108" Click="BtnReset_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Output" Margin="10,250,0,10">
            <Grid>
                <Label x:Name="label2" Content="First Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="177" Margin="38,33,0,0"/>
                <Label x:Name="label3" Content="Last Name:" HorizontalAlignment="Left" Margin="38,109,0,0" VerticalAlignment="Top" Width="177"/>
                <Label x:Name="lblFirstName"  HorizontalAlignment="Left" Margin="435,33,0,0" VerticalAlignment="Top" Width="128" Height="26"/>
                <Label x:Name="lblLastName"  HorizontalAlignment="Left" Margin="435,109,0,0" VerticalAlignment="Top" Width="128" Height="26"/>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
