<UserControl x:Class="W05_DataBinding.ManualBinding.Example1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.ManualBinding"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="sliderFontSize" 
                Margin="0,65,0,0" 
                VerticalAlignment="Top" 
                Width="638" 
                Height="43" 
                RenderTransformOrigin="0.5,0.829" 
                Minimum="1" 
                Maximum="40" 
                Value="10" 
                TickPlacement="BottomRight" 
                ValueChanged="SliderFontSize_ValueChanged"/>

        <Label x:Name="lblText" 
               Content="Hello world!" 
               Width="480" Height="162" 
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Center" />
        <Button x:Name="btnSetSmall" Content="Small" HorizontalAlignment="Left" Margin="81,363,0,0"
                VerticalAlignment="Top" Height="30" Width="141" Click="BtnSetSmall_Click" />
        <Button x:Name="btnSetMedium" Content="Medium" HorizontalAlignment="Center" Margin="0,363,0,0"
                VerticalAlignment="Top" Height="30" Width="128" Click="BtnSetMedium_Click" />
        <Button x:Name="btnSetLarge" Content="Large" HorizontalAlignment="Left" Margin="562,363,0,0"
                VerticalAlignment="Top" Height="30" Width="157" Click="BnSetLarge_Click" />

    </Grid>
</UserControl>
