<UserControl x:Class="W05_DataBinding.Exercise.Exercise"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.Exercise"
             xmlns:extra="clr-namespace:W05_DataBinding.Extra"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:TextToEnableConverter x:Key="TextToEnableConverter"/>
    </UserControl.Resources>
    <Grid>
        <Label x:Name="label" Content="Red" HorizontalAlignment="Left" Margin="45,55,0,0" VerticalAlignment="Top" Width="140" Height="34"/>
        <Label x:Name="label1" Content="Green" HorizontalAlignment="Left" Margin="45,124,0,0" VerticalAlignment="Top" Width="118"/>
        <Label x:Name="label2" Content="Blue" HorizontalAlignment="Left" Margin="45,175,0,0" VerticalAlignment="Top" RenderTransformOrigin="-9.414,-1.677" Width="100"/>
        <Slider x:Name="sliderR" HorizontalAlignment="Left" Margin="226,55,0,0" VerticalAlignment="Top" Width="462" Height="26" IsEnabled="{Binding Text, Converter={StaticResource TextToEnableConverter}, ElementName=textBox, UpdateSourceTrigger=PropertyChanged}" Maximum="255"/>
        <Slider x:Name="sliderG" HorizontalAlignment="Left" Margin="226,119,0,0" VerticalAlignment="Top" Width="462" IsEnabled="{Binding Text, Converter={StaticResource TextToEnableConverter}, ElementName=textBox, UpdateSourceTrigger=PropertyChanged}" Maximum="255"/>
        <Slider x:Name="sliderB" HorizontalAlignment="Left" Margin="226,183,0,0" VerticalAlignment="Top" Width="462" IsEnabled="{Binding Text, Converter={StaticResource TextToEnableConverter}, ElementName=textBox, UpdateSourceTrigger=PropertyChanged}" Maximum="255" />
        <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="553,255,0,0" VerticalAlignment="Top" Height="163" Width="214" Click="BtnReset_Click">
            <Button.Background>
                <MultiBinding>
                    <MultiBinding.Converter>
                        <extra:ColorMultiConverter/>
                    </MultiBinding.Converter>
                    <Binding ElementName="sliderR" Path="Value"/>
                    <Binding ElementName="sliderG" Path="Value"/>
                    <Binding ElementName="sliderB" Path="Value"/>
                </MultiBinding>
            </Button.Background>
        </Button>
        <Label x:Name="label3" Content="This textbox should not be empty:" HorizontalAlignment="Left" Margin="45,324,0,0" VerticalAlignment="Top" Width="242"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="319,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Height="51"/>

    </Grid>
</UserControl>
