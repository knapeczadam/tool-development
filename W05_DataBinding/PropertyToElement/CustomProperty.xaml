<UserControl x:Class="W05_DataBinding.PropertyToElement.CustomProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.PropertyToElement"
             mc:Ignorable="d" 
            x:Name="AdamControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Input" Margin="0,10,0,243">
            <Grid>
                <Label x:Name="label" Content="First Name:" HorizontalAlignment="Left" Margin="46,31,0,0" VerticalAlignment="Top" Width="138"/>
                <Label x:Name="label1" Content="Last Name:" HorizontalAlignment="Left" Margin="46,101,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.46,0.04" Width="138"/>
                <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="162,131,0,0" VerticalAlignment="Top" Height="33" Width="154" Click="BtnReset_Click"/>
                <TextBox x:Name="textBox" 
                         HorizontalAlignment="Left" 
                         Margin="226,31,0,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="225" Height="29" 
                         Text="{Binding MyUser.FirstName, ElementName=AdamControl}"/>
                <TextBox x:Name="textBox1" 
                         HorizontalAlignment="Left" 
                         Margin="226,100,0,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Width="225" Height="26" 
                         Text="{Binding MyUser.LastName, ElementName=AdamControl}"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Output" Margin="0,225,0,0">
            <Grid>
                <Label x:Name="label2" Content="First Name:" HorizontalAlignment="Left" Margin="28,32,0,0" VerticalAlignment="Top" Height="35" Width="205"/>
                <Label x:Name="label3" Content="Last Name:" HorizontalAlignment="Left" Margin="28,101,0,0" VerticalAlignment="Top" Height="37" Width="146"/>
                <Label x:Name="label4" Content="Label" HorizontalAlignment="Left" Height="2" Margin="439,79,0,0" VerticalAlignment="Top" Width="1"/>
                <Label x:Name="lblFirstName" 
                       HorizontalAlignment="Left" 
                       Margin="233,32,0,0" 
                       VerticalAlignment="Top" 
                       Height="33" Width="195" 
                       Content="{Binding MyUser.FirstName, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CustomProperty}}}"/>
                <Label x:Name="lblLastName" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="224,101,0,0" 
                       Height="37" 
                       Width="204" 
                       Content="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=MyUser.LastName, Mode=OneWay}"
                       />
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
