<UserControl x:Class="W05_DataBinding.PropertyToElement.ObservableCollectionBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.PropertyToElement"
             mc:Ignorable="d" 
            x:Name="AdamControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="273,62,0,0" VerticalAlignment="Top" Width="293" Height="46" ItemsSource="{Binding SizeList, ElementName=AdamControl}"/>
        <Label x:Name="label" Content="Hello World!" HorizontalAlignment="Left" Margin="285,158,0,0" VerticalAlignment="Top" Height="144" Width="299" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="{Binding SelectedValue, ElementName=comboBox}">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.378"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="btnAdd" Content="Add 40" HorizontalAlignment="Left" Margin="107,343,0,0" VerticalAlignment="Top" Height="57" Width="196" Click="BtnAdd_Click"/>
        <Button x:Name="btnRemove" Content="Remove 40" HorizontalAlignment="Left" Margin="510,339,0,0" VerticalAlignment="Top" Height="65" Width="172" RenderTransformOrigin="1.141,0.733" Click="BtnRemove_Click"/>

    </Grid>
</UserControl>
