<UserControl x:Class="W05_DataBinding.PropertyToElement.DataContextBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.PropertyToElement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding MyUser, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DataContextBinding}}}">
        <GroupBox x:Name="groupBox" Header="Input" Margin="0,0,0,225">
            <Grid>
                <Label x:Name="label" Content="First Name:" HorizontalAlignment="Left" Margin="51,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.72,-0.159" Width="156"/>
                <Label x:Name="label1" Content="Last Name:" HorizontalAlignment="Left" Margin="51,124,0,0" VerticalAlignment="Top" Width="156"/>
                <Button x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="208,157,0,0" VerticalAlignment="Top" Height="35" Width="136" Click="BtnReset_Click"/>
                <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="212,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="37" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="212,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" Height="36" RenderTransformOrigin="0.5,0.77" Text="{Binding LastName, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Output" Margin="0,230,0,0">
            <Grid>
                <Label x:Name="label2" Content="First Name:" HorizontalAlignment="Left" Margin="38,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-5.58,0.271" Width="177"/>
                <Label x:Name="label3" Content="Last Name:" HorizontalAlignment="Left" Margin="38,130,0,0" VerticalAlignment="Top" Width="167"/>
                <Label x:Name="blbFirstName" Content="{Binding FirstName, Mode=OneWay}" HorizontalAlignment="Left" Margin="278,39,0,0" VerticalAlignment="Top" Width="139" Height="26"/>
                <Label x:Name="lblLastName" Content="{Binding LastName, Mode=OneWay}" HorizontalAlignment="Left" Margin="278,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.184,-1.026" Width="139" Height="26"/>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
