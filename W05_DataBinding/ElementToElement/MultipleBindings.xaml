<UserControl x:Class="W05_DataBinding.ElementToElement.MultipleBindings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.ElementToElement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="sliderFontSize" HorizontalAlignment="Left" Margin="97,26,0,0" VerticalAlignment="Top" Width="673" Height="53" TickPlacement="BottomRight" Value="10" Minimum="1" Maximum="40"/>
        <Label x:Name="lblText" 
               HorizontalAlignment="Left" 
               Margin="258,0,0,0" 
               VerticalAlignment="Center" 
               Height="166" Width="309" 
               VerticalContentAlignment="Center" 
               HorizontalContentAlignment="Center" 
               Content="Hello World!" FontSize="{Binding Value, ElementName=sliderFontSize, Mode=TwoWay}"/>
        <Label x:Name="label" Content="Font Size:" HorizontalAlignment="Left" Margin="97,345,0,0" VerticalAlignment="Top" Height="29" Width="138"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="234,345,0,0" TextWrapping="Wrap" Text="{Binding FontSize, ElementName=lblText, Mode=TwoWay, StringFormat=N0}" VerticalAlignment="Top" Width="200" Height="33" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</UserControl>
