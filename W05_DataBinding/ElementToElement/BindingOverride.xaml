<UserControl x:Class="W05_DataBinding.ElementToElement.BindingOverride"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.ElementToElement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="sliderFontSize" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" Width="360" Height="36" TickPlacement="BottomRight" Minimum="1" Maximum="40" Value="10"/>
        <Label x:Name="lblText" 
               Content="Hello World!" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Height="130" Width="232" 
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Center" 
               FontSize="{Binding Value, ElementName=sliderFontSize}"/>
        <Button x:Name="btnSetSmall" Content="Small" HorizontalAlignment="Left" Margin="79,358,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.101,1.052" Height="41" Width="147" Click="BtnSetSmall_Click"/>
        <Button x:Name="btnSetMedium" Content="Medium" HorizontalAlignment="Left" Margin="331,358,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.008,-0.05" Height="40" Width="164" Click="BtnSetMedium_Click"/>
        <Button x:Name="btnSetLarge" Content="Large" HorizontalAlignment="Left" Margin="612,358,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.791,-0.418" Height="40" Width="144" Click="BtnSetLarge_Click"/>

    </Grid>
</UserControl>
