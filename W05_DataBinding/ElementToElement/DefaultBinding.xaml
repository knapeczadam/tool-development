<UserControl x:Class="W05_DataBinding.ElementToElement.DefaultBinding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.ElementToElement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="sliderFontSize" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top"
                Width="656" Height="57" TickPlacement="BottomRight" Minimum="1" Maximum="40" Value="10" />
        <Label x:Name="lblText" 
               Content="Hello world!" 
               HorizontalAlignment="Center" 
               Margin="0,207,0,0" 
               VerticalAlignment="Top"
               RenderTransformOrigin="-1.939,4.224" 
               Height="203" Width="340" 
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center" 
               FontSize="{Binding ElementName=sliderFontSize, Path=Value}" />

    </Grid>
</UserControl>
