<UserControl x:Class="W05_DataBinding.Extra.ValueConverter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.Extra"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <CheckBox x:Name="checkBoxVisibility" Content="Is Visible" HorizontalAlignment="Left" Margin="273,310,0,0" VerticalAlignment="Top" Height="66" Width="163" FontSize="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <Rectangle HorizontalAlignment="Left" Height="129" Margin="215,48,0,0" Stroke="Black" VerticalAlignment="Top" Width="279" Fill="Red" Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=checkBoxVisibility}"/>

    </Grid>
</UserControl>
