<UserControl x:Class="W05_DataBinding.Extra.MultiBindingColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:W05_DataBinding.Extra"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.Background>
            <MultiBinding>
                <MultiBinding.Converter>
                    <local:ColorMultiConverter/>
                </MultiBinding.Converter>
                <Binding ElementName="sliderR" Path="Value"></Binding>
                <Binding ElementName="sliderG" Path="Value"></Binding>
                <Binding ElementName="sliderB" Path="Value"></Binding>
            </MultiBinding>
        </Grid.Background>

    <Slider x:Name="sliderR" HorizontalAlignment="Left" Margin="309,87,0,0" VerticalAlignment="Top" Width="300" Maximum="255" Value="255"/>
    <Slider x:Name="sliderG" HorizontalAlignment="Left" Margin="309,153,0,0" VerticalAlignment="Top" Width="300" Maximum="255"/>
    <Slider x:Name="sliderB" HorizontalAlignment="Left" Margin="309,235,0,0" VerticalAlignment="Top" Width="300" Maximum="255"/>
    <Label x:Name="label" Content="R" HorizontalAlignment="Left" Margin="61,79,0,0" VerticalAlignment="Top" Width="138"/>
    <Label x:Name="label1" Content="G" HorizontalAlignment="Left" Margin="61,145,0,0" VerticalAlignment="Top" Width="138"/>
    <Label x:Name="label2" Content="B" HorizontalAlignment="Left" Margin="61,235,0,0" VerticalAlignment="Top" Width="138"/>
    </Grid>
</UserControl>
