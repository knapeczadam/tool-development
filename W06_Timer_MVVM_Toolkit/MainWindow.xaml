<Window x:Class="W06_Timer_MVVM_Toolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W06_Timer_MVVM_Toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Label x:Name="lblCounter" Content="{Binding Counter}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="238" Width="430" Margin="0,67,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontStyle="Italic" FontSize="48" FontFamily="Jokerman" ContentStringFormat="N1"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="86,345,0,0" VerticalAlignment="Top" Height="45" Width="99" Background="#FF25FF00" BorderThickness="5,5,5,5" Command="{Binding StartTimerCommand, Mode=OneWay}"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="599,345,0,0" VerticalAlignment="Top" Height="49" Width="101" Background="Red" BorderThickness="5,5,5,5" Command="{Binding StopTimerCommand, Mode=OneWay}"/>

    </Grid>
</Window>
