<Application x:Class="W12_UserApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:W12_UserApp"
             StartupUri="/View/MainWindow.xaml">
    <Application.Resources>
        <!-- Converters -->
        <local:AlphaToBrushConverter x:Key="AlphaToBrushConverter"></local:AlphaToBrushConverter>
        <local:UserToEnableConverter x:Key="UserToEnableConverter"></local:UserToEnableConverter>

        <!-- Styles -->
        <Style TargetType="Button" x:Key="MyButtonStyle">
            <Setter Property="Background" Value="BurlyWood"/>
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource MyButtonStyle}">
            <Setter Property="Background" Value="Black"/>
        </Style>

        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="DeepPink"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
