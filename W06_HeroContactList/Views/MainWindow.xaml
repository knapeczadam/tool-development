<Window x:Class="W06_HeroContactList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W06_HeroContactList"
        xmlns:viewModels="clr-namespace:W06_HeroContactList.ViewModels"
        mc:Ignorable="d"
        Title="Hero Contacts" Height="143" Width="72" ResizeMode="NoResize" MinWidth="190" MinHeight="270">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="35" VerticalAlignment="Center" Width="190">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="101*"/>
                <ColumnDefinition Width="49*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="image" Grid.Column="2" HorizontalAlignment="Center" Height="26" VerticalAlignment="Center" Width="27" Source="/Views/HeroBackground.jpg"/>
            <Image x:Name="image1" HorizontalAlignment="Left" Height="26" Margin="10,0,0,0" VerticalAlignment="Center" Width="24" Source="/Views/HeroBackground.jpg"/>
            <Viewbox Grid.Column="1">
                <Label x:Name="label" Content="Hero Contact List"/>
            </Viewbox>
        </Grid>

        <!-- LIST -->
        <ListBox x:Name="listBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="143" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="170" ItemsSource="{Binding Contacts}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="image3" Height="35" Width="31" RenderTransformOrigin="0.048,0.092" Source="{Binding Avatar}"/>
                        <Grid>
                            <TextBlock VerticalAlignment="Top" Text="{Binding FirstName}">

                            </TextBlock>
                            <TextBlock VerticalAlignment="Bottom" Text="{Binding LastName}">

                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    <TextBlock.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.EditContactCommand}"
                                          CommandParameter="{Binding .}" />
                    </TextBlock.InputBindings>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- -->
        <Button x:Name="button" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="26" Margin="41,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="95" Command="{Binding RefreshContactCommand, Mode=OneWay}">
            <Image x:Name="image2" Height="18" Width="38" Source="/Views/RefreshIcon.png"/>
        </Button>

    </Grid>
</Window>
