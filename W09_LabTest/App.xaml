<Application x:Class="W09_LabTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:W09_LabTest"
             StartupUri="/View/MainWindow.xaml">
    <Application.Resources>
        <!-- Brushes -->
        <SolidColorBrush Color="#da292a" x:Key="TitleColor"/>
        <SolidColorBrush Color="#fff" x:Key="SubtitleColor"/>
        <SolidColorBrush Color="#eee" x:Key="TextColor"/>
        <SolidColorBrush Color="#222222" x:Key="BackgroundColor" Opacity="0.3"/>
        <!-- Fonts -->
        <FontFamily x:Key="MainFont">Agency FB Bold</FontFamily>
        <FontFamily x:Key="SecondaryFont">Bahnschrift Light</FontFamily>
        <!-- Converters -->
        <local:MapImagePathConverter x:Key="MapImagePathConverter"></local:MapImagePathConverter>
        <local:LegendImagePathConverter x:Key="LegendImagePathConverter"></local:LegendImagePathConverter>

        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Background" Value="Black"/>
                <Setter Property="FontFamily" Value="{StaticResource SecondaryFont}"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" >
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter x:Name="MyContentPresenter" 
                                          Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#222"/>
                    <Setter Property="Foreground" Value="#888"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FFBBEBFF"/>
                    <Setter Property="Background" Value="#FF306587"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
